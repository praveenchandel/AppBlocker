<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StrictMode">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:background="@color/blue"
          android:gravity="center_horizontal">

          <ImageView
              android:layout_width="80dp"
              android:layout_height="80dp"
              android:layout_marginTop="20dp"
              android:src="@drawable/images" />

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Strict Mode"
              android:textColor="@color/white"
              android:textStyle="bold"
              android:textSize="30dp"
              android:layout_marginTop="10dp"/>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="You need to go through"
              android:textColor="@color/white"
              android:layout_marginTop="10dp"/>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="these three simple steps to "
              android:textColor="@color/white" />

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text=" activate Strict Mode"
              android:textColor="@color/white"
              android:layout_marginBottom="18dp"/>

      </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/strict_mode_blocking_level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"
                android:text="1. Blocking Level"
                android:textStyle="bold"
                android:textSize="22sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="        App editing will be blocked" />


            <androidx.cardview.widget.CardView
                android:id="@+id/strict_mode_blocking_level_cardView"
                android:layout_margin="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:cardElevation="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="30sp"
                        android:text="What is it about?"/>

                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="10dp"
                       android:gravity="center_horizontal"
                       android:text="Make sure you use Strict Mode \n as a parental Lock"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:textColor="#000000"
                        android:gravity="center_horizontal"
                        android:text="Quick Block editing will be blocked"/>


                    <RadioButton
                        android:id="@+id/strict_mode_blocking_level_radio_Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:textColor="#000000"
                        android:layout_gravity="center_horizontal"
                        android:text="It won't be possible to remove AppBlock"/>

                    <CheckBox
                        android:id="@+id/strict_mode_blocking_level_checkBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:textColor="#000000"
                        android:layout_gravity="center_horizontal"
                        android:text="Device settings will be blocked"/>


                    <TextView
                        android:id="@+id/strict_mode_go_to_activation_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="6dp"
                        android:textColor="#FF0000"
                        android:layout_gravity="end"
                        android:text="GO TO ACTIVATION"/>


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"
                android:text="2. Deactivation method"
                android:textStyle="bold"
                android:textSize="22sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="        Password" />

            <TextView
                android:id="@+id/strict_mode_deactivation_pin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"
                android:text="3. Deactivation Password"
                android:textStyle="bold"
                android:textSize="22sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="       Set a Password for Strict Mode deactivation" />


            <androidx.cardview.widget.CardView
                android:id="@+id/strict_mode_deactivation_password"
                android:layout_margin="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:cardElevation="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:gravity="center_horizontal"
                        android:text="The password that you will enter, will be use \n later to deactivate the Strict Mode"/>

                    <EditText
                        android:id="@+id/strict_mode_enter_password"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:hint="Enter Password"/>

                    <EditText
                        android:id="@+id/strict_mode_reenter_password"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:hint="Reenter Password"/>


                    <Button
                        android:id="@+id/strict_mode_save_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="6dp"
                        android:layout_gravity="right"
                        android:text="   Save Password   "
                        android:textAllCaps="false"
                        android:background="@drawable/button_1"/>


                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/strict_mode_rights"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"
                android:text="4. Rights"
                android:textStyle="bold"
                android:textSize="22sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="       Device Administration rights set" />


            <Button
                android:id="@+id/strict_mode_active_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="20dp"
                android:text="  Activate  "
                android:textAllCaps="false"
                android:background="@drawable/button_1"/>


        </LinearLayout>

    </LinearLayout>

</ScrollView>